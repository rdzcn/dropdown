@require './_reset.styl'
@require './_fonts.styl'
@require './_configuration.styl'
@require './_app.styl'
@require './_card.styl'
@require './_dropdown.styl'
@require './_toggle.styl'
@require './_body.styl'
@require './_responsive.styl'


fonts-path ?= "fonts"

icon-close = "\e900"
icon-down-arrow = "\e901"
icon-info = "\e902"
icon-left-arrow = "\e903"
icon-minimize = "\e904"
icon-right-arrow = "\e905"
icon-up-arrow = "\e906"

@font-face
  font-family 'practiceFonts'
  src url(fonts-path + '/practiceFonts.eot')
  src url(fonts-path + '/practiceFonts.eot#iefix') format('embedded-opentype'), 
      url(fonts-path + '/practiceFonts.ttf') format('truetype'), 
      url(fonts-path + '/practiceFonts.woff') format('woff'), 
      url(fonts-path + '/practiceFonts.svg#practiceFonts') format('svg')
  font-weight normal
  font-style normal

i
  font-family 'practiceFonts' !important
  speak none
  font-style normal
  font-weight 700
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-close
  &:before
    content icon-close
.icon-down-arrow
  &:before
    content icon-down-arrow
.icon-info
  &:before
    content icon-info
.icon-left-arrow
  &:before
    content icon-left-arrow
.icon-minimize
  &:before
    content icon-minimize
.icon-right-arrow
  &:before
    content icon-right-arrow
.icon-up-arrow
  &:before
    content icon-up-arrow
